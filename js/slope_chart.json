{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Horizontal bar chart of food production in Malaysia (in tonnes) with year filter",
  "width": 600,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/x-xinyue/FIT3179-DV2/refs/heads/main/data/FAOSTAT_data_en_10-17-2025.csv"
  },

  "params": [
    {
      "name": "selected_year",
      "value": 2023,
      "bind": {
        "input": "select",
        "options": [2022, 2023],
        "name": "Select Year: "
      }
    }
  ],

  "transform": [
    {"filter": "datum.Year == selected_year"}
  ],

  "mark": {"type": "bar", "cornerRadiusEnd": 3},

  "encoding": {
    "y": {
      "field": "Item Group",
      "type": "nominal",
      "sort": "-x",
      "title": "Food Item",
      "axis": {"labelFontSize": 12}
    },
    "x": {
      "field": "Value",
      "type": "quantitative",
      "title": "Production (tonnes)",
      "axis": {"labelFontSize": 12}
    },
    "color": {
      "field": "Item Group",
      "type": "nominal",
      "legend": null,
      "scale": {"scheme": "category10"}
    },
    "tooltip": [
      {"field": "Item Group", "type": "nominal"},
      {"field": "Year", "type": "ordinal"},
      {"field": "Value", "type": "quantitative", "format": ","}
    ]
  },

  "config": {
    "view": {"stroke": null},
    "axis": {"labelFontSize": 12, "titleFontSize": 13}
  }
}
