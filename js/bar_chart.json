{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Bar chart comparing Malaysia's inflation with ASEAN neighbours, 2019â€“2023",
  "data": {
    "url": "https://raw.githubusercontent.com/x-xinyue/FIT3179-Homework-Week-10/refs/heads/main/data/global_inflation.csv"
  },
  "config": {
    "view": {"stroke": null},
    "title": {"font": "Arial", "fontSize": 16, "fontWeight": "bold", "color": "#333"},
    "axis": {
      "domain": false,
      "labelFont": "Arial",
      "labelFontSize": 16,
      "labelFontWeight": "bold",
      "title": null,
      "labelColor": "#333"
    },
    "legend": {
      "title": null,
      "labelFont": "Arial",
      "labelFontSize": 16,
      "labelFontWeight": "bold",
      "labelColor": "#333"
    }
  },
  "width": 400,
  "height": 300,
  "title": {"text": "Malaysia's Inflation (%) vs Neighbouring Countries"},
  "transform": [
    {
      "filter": {
        "field": "Country Name",
        "oneOf": ["Malaysia", "Singapore", "Thailand", "Indonesia", "Philippines"]
      }
    },
    {
      "fold": ["2019", "2020", "2021", "2022", "2023"],
      "as": ["Year", "Inflation"]
    },
    {"calculate": "toNumber(datum.Year)", "as": "YearNum"},
    {
      "calculate": "datum['Country Name'] == 'Malaysia' ? 'Malaysia' : 'Others'",
      "as": "Highlight"
    },
    {"filter": "datum.YearNum == yearSelector"}
  ],
  "layer": [
    {
      "mark": {"type": "bar"}
    },
    {
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": {
          "expr": "datum.Inflation >= 0 ? 'bottom' : 'top'"
        },
        "dy": {
          "expr": "datum.Inflation >= 0 ? -2 : 2"
        },
        "font": "Arial",
        "fontSize": 14,
        "fontWeight": "bold",
        "color": "#333"
      },
      "encoding": {
        "text": {"field": "Inflation", "type": "quantitative", "format": ".1f"},
        "x": {"field": "Country Name", "type": "nominal"},
        "y": {"field": "Inflation", "type": "quantitative"}
      }
    }
  ],
  "encoding": {
    "x": {"field": "Country Name", "type": "nominal"},
    "y": {"field": "Inflation", "type": "quantitative"},
    "color": {
      "field": "Highlight",
      "type": "nominal",
      "scale": {
        "domain": ["Malaysia", "Others"],
        "range": ["#1f77b4", "#cccccc"]
      }
    },
    "tooltip": [
      {"field": "Country Name", "type": "nominal"},
      {"field": "Year", "type": "ordinal"},
      {"field": "Inflation", "type": "quantitative", "format": ".2f", "title": "Inflation (%)"}
    ]
  },
  "params": [
    {
      "name": "yearSelector",
      "value": 2019,
      "bind": {
        "input": "range",
        "min": 2019,
        "max": 2023,
        "step": 1,
        "name": "Select Year:"
      }
    }
  ]
}
