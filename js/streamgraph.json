{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Streamgraph of inflation categories over time with interactive state filter (2019â€“2025).",
  "data": {
    "url": "https://raw.githubusercontent.com/x-xinyue/FIT3179-DV2/refs/heads/main/data/merged_inflation.csv"
  },
  "width": "container",
  "height": 500,
  "title": {
    "text": "Malaysiaâ€™s Average Year on Year (YoY) Inflation (%) by Category (2019-Aug 2025)",
    "font": "Arial",
    "fontSize": 16,
    "fontWeight": "bold",
    "color": "#333"
  },

  "params": [
    {
      "name": "selected_state",
      "value": "Overall",
      "bind": {
        "input": "select",
        "options": [
          "Overall",
          "Johor",
          "Kedah",
          "Kelantan",
          "Melaka",
          "Negeri Sembilan",
          "Pahang",
          "Perak",
          "Perlis",
          "Pulau Pinang",
          "Sabah",
          "Sarawak",
          "Selangor",
          "Terengganu",
          "Kuala Lumpur",
          "Labuan",
          "Putrajaya"
        ],
        "name": "Select state: "
      }
    }
  ],

  "transform": [
    {"filter": "datum.yoy_inflation != null"},
    {"calculate": "toDate(datum.date)", "as": "Date"},
    {"filter": "datum.desc_en != 'All items'"},
    {"calculate": "toNumber(year(datum.Date))", "as": "Year"},
    {"filter": "datum.Year >= 2019 && datum.Year <= 2025"},
    {"filter": "datum.state == selected_state"},
    {
      "aggregate": [
        {"op": "mean", "field": "yoy_inflation", "as": "avg_inflation"}
      ],
      "groupby": ["desc_en", "state", "Date"]
    }
  ],

  "mark": {
    "type": "area",
    "interpolate": "basis",
    "line": false
  },

  "encoding": {
    "x": {
      "field": "Date",
      "type": "temporal",
      "timeUnit": "yearmonth",
      "title": null,
      "scale": {"domain": [{"year": 2019, "month": 1}, {"year": 2025, "month": 8}]},
      "axis": {
        "format": "%b %Y",
        "labelAngle": 0,
        "labelFontSize": 11,
        "labelFontWeight": "bold",
        "labelColor": "#333",
        "titleColor": "#333",
        "ticks": false,
        "domain": false,
        "grid": true,
        "labelFlush": false
      }
    },
    "y": {
      "field": "avg_inflation",
      "type": "quantitative",
      "stack": "center",
      "title": null,
      "axis": {
        "ticks": false,
        "domain": false,
        "labelFontSize": 12,
        "labelFontWeight": "bold",
        "labelColor": "#333",
        "titleColor": "#333"
      }
    },
    "color": {
      "field": "desc_en",
      "type": "nominal",
      "title": null,
      "titleColor": "#333",
      "scale": {
        "range": [
          "#003f5c",
          "#2c4875",
          "#58508d",
          "#8a508f",
          "#bc5090",
          "#de5a79",
          "#f75454",
          "#ff8531",
          "#ffa600",
          "#ffd380",
          "#f09f5e",
          "#b1682c",
          "#76451d"
        ]
      }
    },
    "tooltip": [
      {"field": "desc_en", "type": "nominal", "title": "Category"},
      {"field": "Date", "type": "temporal", "timeUnit": "yearmonth", "title": "Year Month"},
      {
        "field": "avg_inflation",
        "type": "quantitative",
        "title": "Average YoY Inflation (%)",
        "format": ".2f"
      }
    ]
  },

  "config": {
    "view": {"stroke": null, "padding": {"bottom": 40}},
    "axis": {
      "labelFontSize": 13,
      "titleFontSize": 13,
      "labelPadding": 15,
      "labelColor": "#333",
      "titleColor": "#333"
    },
    "legend": {
      "orient": "bottom",
      "direction": "vertical",
      "columnPadding": 60,
      "title": null,
      "titleFontSize": 15,
      "titleColor": "#333",
      "labelFontSize": 13,
      "labelColor": "#333",
      "columns": 2,
      "symbolSize": 100,
      "symbolType": "circle"
    },
    "style": {
      "guide-label": {"fill": "#333"},
      "guide-title": {"fill": "#333"}
    }
  }
}
