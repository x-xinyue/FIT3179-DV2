{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": { "text": "Food & Beverages Price Inflation Year on Year (YoY) across Malaysia (2023)" },
  "projection": {"type": "mercator"},
  "view": {
      "fill": "#77BEF0",
      "stroke": "transparent",
      "opacity": 0.6
    },
  "config": {
    "view": {"stroke": null}, 
    "title": {"font": "Arial", "fontSize": 16, "fontWeight": "bold", "color": "#333"},
    "axis": {
      "domain": false,
      "labelFont": "Arial",
      "labelFontSize": 16,
      "labelFontWeight": "bold",
      "title": null,         
      "labelColor": "#333"
    },
    "legend": {
      "title": null,           
      "labelFont": "Arial",
      "labelFontSize": 16,
      "labelFontWeight": "bold",
      "labelColor": "#333"
    }
  },
  "width": 700,
  "height": 300,
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/x-xinyue/FIT3179-Homework-Week-9/main/js/output.json",
        "format": {"type": "topojson", "feature": "my"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/x-xinyue/FIT3179-Homework-Week-9/main/js/output.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_1"}
      },
      "mark": {"type": "geoshape", "stroke": "white", "strokeOpacity": 0.3, "fill": null}

    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/x-xinyue/FIT3179-Homework-Week-9/main/data/cpi_2d_state.csv"
      },
      "transform": [
        {"filter": "substring(datum.date, 0, 4) == '2023'"},
        {"filter": "datum.division == '01'"},
        {
          "aggregate": [
            {"op": "mean", "field": "yoy_inflation", "as": "inflation"}
          ],
          "groupby": ["state"]
        },
        {
          "joinaggregate": [
            {"op": "min", "field": "inflation", "as": "min_inflation"},
            {"op": "max", "field": "inflation", "as": "max_inflation"}
          ]
        },
        {
          "calculate": "(datum.inflation - datum.min_inflation) / (datum.max_inflation - datum.min_inflation)",
          "as": "inflation_norm"
        },
        {
          "lookup": "state",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/x-xinyue/FIT3179-Homework-Week-9/main/js/output.json",
              "format": {"type": "topojson", "feature": "my"}
            },
            "key": "properties.name"
          },
          "as": "geo"
        }
      ],
      "mark": {"type": "geoshape"},
      "encoding": {
        "shape": {"field": "geo", "type": "geojson"},
      "color": {
        "field": "inflation_norm",
        "type": "quantitative",
        "title": "Inflation Rate (%)",
        "scale": {
          "type": "threshold",
          "domain": [0, 0.25, 0.5, 0.75, 1],
          "range": ["#FEF3E2", "#FFDDAE", "#FFCB61", "#FF894F", "#EA5B6F"]
        },
        "legend": {
          "labelFont": "Arial",
          "labelFontSize": 16,
          "labelFontWeight": "bold",
          "labelColor": "#333",
          "titleFont": "Arial",
          "titleFontSize": 16,
          "titleFontWeight": "bold",
          "titleColor": "#333",
          "orient": "right"
        }
      },
        "tooltip": [
          {"field": "state", "type": "nominal", "title": "State"},
          {"field": "inflation_norm", "type": "quantitative", "title": "YoY Inflation (%)", "format": ".2f"}
        ]
      }
    }
  ]
}
