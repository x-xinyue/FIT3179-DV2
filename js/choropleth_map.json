{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": { "text": "Food & Beverages YoY Price Inflation (%) across Malaysia (2019-2025)" },
  "projection": {"type": "mercator"},
  "view": {
    "fill": "#99d1ff",
    "stroke": "transparent",
    "opacity": 0.6
  },
  "config": {
    "view": {"stroke": null},
    "title": {"font": "Arial", "fontSize": 16, "fontWeight": "bold", "color": "#333"},
    "axis": {
      "domain": false,
      "labelFont": "Arial",
      "labelFontSize": 16,
      "labelFontWeight": "bold",
      "title": null,
      "labelColor": "#333"
    },
    "legend": {
      "title": null,
      "labelFont": "Arial",
      "labelFontSize": 16,
      "labelFontWeight": "bold",
      "labelColor": "#333"
    }
  },
  "width": "container",
  "height": 350,

  "params": [
    {
      "name": "selectedYear",
      "value": 2025,
      "bind": {
        "input": "range",
        "min": 2019,
        "max": 2025,
        "step": 1,
        "name": "Select Year: "
      }
    }
  ],

  "layer": [
          {
    "mark": {
      "type": "text",
      "text": "Malaysia's food inflation remains high in 2025",
      "fontSize": 14,
      "fontWeight": "bold",
      "color": "#333",
      "align": "center",
      "baseline": "middle",
      "opacity": 0.85
    },
    "encoding": {
      "longitude": {"value": 109.5},
      "latitude": {"value": 4.5}
    }
  },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/x-xinyue/FIT3179-Homework-Week-9/main/js/output.json",
        "format": {"type": "topojson", "feature": "my"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "#ffffff", "opacity": 1, "strokeWidth": 1.5}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/x-xinyue/FIT3179-Homework-Week-9/main/js/output.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_1"}
      },
      "mark": {"type": "geoshape", "stroke": "white", "strokeOpacity": 0.3, "fill": null, "opacity": 0.85}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/x-xinyue/FIT3179-Homework-Week-9/main/data/cpi_2d_state.csv"
      },
      "transform": [
        {
          "filter": "substring(datum.date, 0, 4) == toString(selectedYear)"
        },
        {"filter": "datum.division == '01'"},
        {
          "aggregate": [
            {"op": "mean", "field": "yoy_inflation", "as": "inflation"}
          ],
          "groupby": ["state"]
        },
        {
          "joinaggregate": [
            {"op": "min", "field": "inflation", "as": "min_inflation"},
            {"op": "max", "field": "inflation", "as": "max_inflation"}
          ]
        },
        {
          "calculate": "(datum.inflation - datum.min_inflation) / (datum.max_inflation - datum.min_inflation)",
          "as": "inflation_norm"
        },
        {
          "lookup": "state",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/x-xinyue/FIT3179-Homework-Week-9/main/js/output.json",
              "format": {"type": "topojson", "feature": "my"}
            },
            "key": "properties.name"
          },
          "as": "geo"
        }
      ],
      "mark": {"type": "geoshape", "opacity": 0.85, "stroke": "#ffffff", "strokeWidth": 0.5},
      "encoding": {
        "shape": {"field": "geo", "type": "geojson"},
        "color": {
          "field": "inflation_norm",
          "type": "quantitative",
          "title": "Inflation Rate (%)",
          "scale": {
            "type": "threshold",
            "domain": [0, 0.25, 0.5, 0.75, 1],
            "range": ["#ffd380","#ffa600","#ff8531","#f75454","#cc0000"]
          },
          "legend": {
          "titleFontSize": 13,
            "titleColor": "#333",
            "labelFontSize": 13,
            "labelColor": "#333",
            "orient": "right"
          }
        },
        "tooltip": [
          {"field": "state", "type": "nominal", "title": "State"},
          {
            "field": "inflation",
            "type": "quantitative",
            "title": "YoY Inflation (%)",
            "format": ".2f"
          }
        ]
      }
    }

  ]
}
