{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Line chart comparing Malaysia's inflation with ASEAN neighbours, 2019â€“2023",
  "data": {
    "url": "https://raw.githubusercontent.com/x-xinyue/FIT3179-Homework-Week-10/refs/heads/main/data/global_inflation.csv"
  },
  "config": {
    "view": {"stroke": null},
    "title": {"font": "Arial", "fontSize": 16, "fontWeight": "bold", "color": "#333"},
    "axis": {
      "domain": false,
      "ticks": false,
      "labelFont": "Arial",
      "labelFontSize": 13,
      "labelFontWeight": "bold",
      "title": null,
      "labelColor": "#333",
      "labelPadding": 15


    },
    "legend": {
      "title": null,
      "labelFont": "Arial",
      "labelFontSize": 14,
      "labelFontWeight": "bold",
      "labelColor": "#333"
    }
  },
  "width": "container",
  "height": 400,
  "transform": [
    {
      "filter": {
        "field": "Country Name",
        "oneOf": ["Malaysia", "Singapore", "Thailand", "Indonesia", "Philippines"]
      }
    },
    {
      "fold": ["2019", "2020", "2021", "2022", "2023", "2024"],
      "as": ["Year", "Inflation"]
    },
    {"calculate": "toNumber(datum.Year)", "as": "YearNum"},
    {
      "calculate": "datum['Country Name'] == 'Malaysia' ? 'Malaysia' : 'Other'",
      "as": "Category"
    }
  ],
  "layer": [
    {
      "mark": {"type": "line", "point": true},
      "encoding": {
        "x": {
          "field": "YearNum",
          "type": "ordinal",
          "axis": {"labelAngle": 0, "title": null}
        },
        "y": {
          "field": "Inflation",
          "type": "quantitative",
          "axis": {"title": null}
        },
        "color": {
          "field": "Category",
          "type": "nominal",
          "scale": {
            "domain": ["Malaysia", "Other"],
            "range": ["#2c4875", "#ccc"]
          },
          "legend": null
        },
        "detail": {"field": "Country Name"},
        "strokeWidth": {
          "condition": {"test": "datum['Country Name'] == 'Malaysia'", "value": 4},
          "value": 2
        },
        "tooltip": [
          {"field": "Country Name", "type": "nominal", "title": "Country"},
          {"field": "YearNum", "type": "ordinal", "title": "Year"},
          {
            "field": "Inflation",
            "type": "quantitative",
            "format": ".2f",
            "title": "Inflation (%)"
          }
        ]
      }
    },
    {
      "transform": [{"filter": "datum.Year == '2024'"}],
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 10,
        "font": "Arial",
        "fontSize": 13,
        "fontWeight": "bold"
      },
      "encoding": {
        "x": {"field": "YearNum", "type": "ordinal"},
        "y": {"field": "Inflation", "type": "quantitative"},
        "text": {"field": "Country Name"},
        "color": {
          "condition": {
            "test": "datum['Country Name'] == 'Malaysia'",
            "value": "#2c4875"
          },
          "value": "#999"
        }
      }
    }
  ]
}
